@using FInalProject.Application.ViewModels;
@using FInalProject.Application.ViewModels.Comment.CommentOperations
 
@model CreateCommentViewModel; 
@{
    ViewBag.Title = "Create Comment";
}
<form id="CommentCreation" asp-controller="BookOperations" asp-action="CreateComment" method="post">
    @Html.AntiForgeryToken()
    <label for="Description">Comment:</label>
    <input asp-for="Description" type="text" id="CommentDescription"/>
    <span asp-validation-for="Description" class="text-danger"></span>
    <input hidden asp-for="BookId"/>
    <input type="submit" value="Submit" />
</form>
