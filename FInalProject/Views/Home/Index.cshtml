@using FInalProject.Data.Models;
@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container text-center mt-5">
        <h1 class="text-light fw-bold mb-4">Explore Our Library</h1>
        <p class="text-light">Discover a variety of books, magazines, and comics curated just for you.</p>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            @foreach (var category in new[]
           {
        new { Name = "Magazines", Modifier = 1 },
        new { Name = "Newspapers", Modifier = 2 },
        new { Name = "Comics", Modifier = 3 },
        new { Name = "Educational Books", Modifier = 4 },
        new { Name = "Books", Modifier = 5 }
        })
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card category-card text-center">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@category.Name</h5>
                            <a href="@Url.Action("AllBooks", "Books", new { modifier = category.Modifier })"
                               class="btn browse-btn">Browse</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center vh-100">
        <h2 class="text-light text-center">Login or Register to Access the Library</h2>
    </div>
}

@section Styles {
    <style>
        /* Background Styling */
        body {
            background: linear-gradient(to right, #141e30, #243b55);
            color: white;
            font-family: 'Poppins', sans-serif;
        }

        /* Card Styling */
        .category-card {
            background: #2c3e50;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

            .category-card:hover {
                transform: translateY(-5px);
                box-shadow: 6px 6px 20px rgba(0, 0, 0, 0.5);
            }

        /* Button Styling */
        .browse-btn {
            background: #2980b9;
            color: white;
            border-radius: 25px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
        }

            .browse-btn:hover {
                background: #1f618d;
                transform: scale(1.05);
            }
    </style>
}
