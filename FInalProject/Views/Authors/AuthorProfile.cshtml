@using FInalProject.ViewModels
@model AuthorProfileViewModel
@{
    ViewBag.Title = "Author Profile";
}
@if(Model.AuthorName == null)
{
    <h2>Profile not loaded correctly</h2>
}
<div class="container mt-4">
    <!-- Author Info Section (All wrapped in one clean div) -->
    <div class="author-profile-container shadow rounded p-4 mb-5 position-relative">
        <!-- Star in top-right corner -->
        <a href="#"
           class="favourite-toggle @(Model.isAuthorFavourited ? "favourited" : "")"
           data-author-id="@Model.AuthorId">
            @(Model.isAuthorFavourited ? "★" : "☆")
        </a>

        <div class="row">
            <!-- Portrait Left -->
            <div class="col-md-3 text-center">
                <img src="@Model.AuthorPortrait"
                     class="img-fluid rounded shadow-sm author-portrait"
                     alt="Author Portrait" />
            </div>

            <!-- Info Right -->
            <div class="col-md-9 d-flex flex-column justify-content-center">
                <h2>@Model.AuthorName</h2>

                @if (User.IsInRole("Admin"))
                {
                    <div class="mt-3">
                        @await Html.PartialAsync("_AddAuthorPortrait", new AddAuthorPortraitViewModel
               {
                   Id = Model.AuthorId
               })
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Author's Books Section -->
    <div class="row">
        <div class="col-md-12">
            <h3 class="mb-3 text-center">Author's Books</h3>
            <hr />
        </div>
    </div>

    <div style="display:none;">
        @Html.AntiForgeryToken()
    </div>

    @if (Model.AuthorsBooks.Any())
    {
        <div class="row">
            @foreach (var book in Model.AuthorsBooks)
            {
                <div class="col-md-6 mb-4">
                    <div class="card p-3 shadow">
                        <div class="row g-0 align-items-center">
                            <!-- Book Cover -->
                            <div class="col-md-4 text-center">
                                <img src="@book.CoverImage"
                                     class="img-fluid rounded"
                                     alt="Book Cover"
                                     style="width: 14rem; height: 16rem; object-fit: cover;" />
                            </div>

                            <!-- Book Details -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@book.Name</h5>
                                    <p class="card-text"><strong>Pages:</strong> @book.Pages</p>
                                    <p class="card-text"><strong>Author:</strong> @book.AuthorName</p>
                                    <p class="card-text"><strong>Category:</strong> @book.Category</p>
                                    <p class="card-text">
                                        <strong>Genres:</strong>
                                        @if (book.Genres == null || !book.Genres.Any())
                                        {
                                            <span>No genres listed</span>
                                        }
                                        else
                                        {
                                            @foreach (var genre in book.Genres)
                                            {
                                                <span class="badge bg-secondary me-1">@genre</span>
                                            }
                                        }
                                    </p>
                                    <a href="@Url.Action("BookFocus", "Books", new { id = book.Id })" class="btn btn-primary">See more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No books credited to this author.
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/authorProfileLikeButtonJs.js"></script>
}
@section Styles{
    <link rel="stylesheet" href="~/css/AuthorProfile.css"/>
}