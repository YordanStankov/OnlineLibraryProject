@using FInalProject.ViewModels
@model List<BookListViewModel>
@{
    ViewBag.Tile = "Seached book list";
}
<header>
    <h2>Search results</h2>
</header>
@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="card">
                <blockquote>
                    <p>
                        Name:@book.Name
                        <hr />
                    </p>
                    <p>
                        Pages:@book.Pages
                        <hr />
                    </p>
                    <p>
                        Author:@book.AuthorName
                        <hr />
                    </p>
                    <p>
                        Cover:@book.CoverImage
                        <hr />
                    </p>
                    <p>
                        @if (!book.Genres.Any())
                        {
                        <p>Falls under no genres wow amazing</p>
                        }
                        else
                        {
                            @foreach (var genre in book.Genres)
                            {
                            <p>@genre</p>
                            }
                        }
                    </p>
                    <a href="@Url.Action("BookFocus", "Books", new {id = book.Id})" class="btn btn-primary">See more</a>
                </blockquote>
            </div>
        }
    </div>
}
else
{
    <h2>No such books were found</h2>
}

