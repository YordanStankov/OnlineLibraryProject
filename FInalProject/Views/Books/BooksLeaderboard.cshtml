@using FInalProject.ViewModels
@model List<BooksLeaderboardViewModel>

@{
    ViewBag.Title = "Leaderboard";
    int i = 1;
}

<div class="container mt-5 justify-content-center">
    <h2 class="mb-4">📚 Book Leaderboard</h2>

    @if (Model.Count > 0)
    {
        <div class="d-flex flex-column gap-3">
            @foreach (var book in Model)
            {
                <div class="card w-100 shadow-sm border-start border-4 border-primary">
                    <div class="card-body d-flex justify-content-between align-items-center flex-wrap">

                        <!-- Placement Number -->
                        <div class="fw-bold fs-4 text-primary" style="width: 50px;">
                            @i.
                        </div>

                        <!-- Book Details Inline (Title, Author, Category, Reviews) -->
                        <div class="d-flex flex-wrap gap-4">
                            <div><strong>Title:</strong> @book.BookName</div>
                            <div><strong>Author:</strong> @book.AuthorName</div>
                            <div><strong>Category:</strong> @book.CategoryString</div>
                            <div><strong>Positive Reviews:</strong> @book.PositiveReviews</div>
                        </div>

                        <!-- See More Button -->
                        <div class="mt-2 mt-md-0">
                            <a href="@Url.Action("BookFocus", "Books", new { id = book.BookId })" class="btn btn-outline-primary">See more</a>
                        </div>
                    </div>
                </div>
                i++;
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No books on the leaderboard.
        </div>
    }
</div>
