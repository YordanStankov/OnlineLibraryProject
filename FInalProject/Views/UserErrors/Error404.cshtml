@{
    ViewBag.Title = "Error 404"; 
}

<div class="container error-container text-center">
    <div class="error-box">
        <div class="error-icon mb-4">
            📚
        </div>

        <h1 class="display-1 text-danger fw-bold">404</h1>
        <h3 class="text-dark mb-3">Lost in the library?</h3>
        <p class="text-muted mb-4">
            The page you're looking for doesn't exist on our virtual shelves.<br />
            It may have been moved, removed, or never existed at all.
        </p>

        <a class="btn btn-primary btn-lg shadow-sm" asp-controller="Books" asp-action="AllBooks">
            Return to All Books
        </a>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/Error404.css"/>
}