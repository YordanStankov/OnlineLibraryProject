
@{
    ViewBag.Title = "Search bar";
}
<form asp-action="SearchAuthor" asp-controller="Authors" method="get" class="d-flex align-items-center border rounded-pill p-2 shadow-sm">
    <input name="searchedString" type="text" id="SearchField" class="form-control border-0 shadow-none" placeholder="Search..." />
    <button type="submit" class="btn btn-link text-dark">
        <i class="bi bi-search"></i>
    </button>
</form>